{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build_project",
      "type": "cppbuild",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++20",
        "main.cpp",
        "-o",
        "${workspaceFolder}/build/program"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src",
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
    }
  ]
}